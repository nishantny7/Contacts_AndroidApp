<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactDescription">


    <ImageView
        android:id="@+id/contact_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/contact_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/description_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:fontFamily="@font/amiri"
        android:layout_below="@id/contact_photo"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <View
        android:id="@+id/view_separator1"
        android:layout_width="match_parent"
        android:layout_below="@id/description_name"
        android:layout_height="0.2dp"
        android:background="#444" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_hor"
        android:orientation="horizontal"
        android:layout_below="@id/description_name"
        android:gravity="center">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_layout_ver1"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/blue_call_icon"
                app:srcCompat="@drawable/blue_call_icon"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blue_call_text"
                android:text="Call"
                android:textColor="#4682B4"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_layout_ver2"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/blue_text_icon"
                app:srcCompat="@drawable/blue_message_icon"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blue_message_text"
                android:text="Text"
                android:textColor="#4682B4"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear_layout_ver3"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/blue_email_icon"
                app:srcCompat="@drawable/blue_email_icon"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blue_email_text"
                android:text="Mail"
                android:textColor="#4682B4"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_separator5"
        android:layout_width="match_parent"
        android:layout_below="@id/linear_layout_hor"
        android:layout_height="0.2dp"
        android:layout_marginTop="10dp"
        android:background="#444" />

    <ImageView
        android:id="@+id/image_number"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/view_separator5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/contact_number" />

    <TextView
        android:id="@+id/description_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_separator5"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/view_separator2"
        android:layout_toRightOf="@id/image_number"
        android:text="TextView"
        android:textSize="18sp"
        android:textColor="#100c08"
        android:layout_toEndOf="@id/image_number" />

    <View
        android:id="@+id/view_separator2"
        android:layout_width="match_parent"
        android:layout_below="@id/description_number"
        android:layout_marginTop="10dp"
        android:layout_height="0.2dp"
        android:background="#444"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp" />

    <ImageView
        android:id="@+id/image_email"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/view_separator2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/contact_email"/>

    <TextView
        android:id="@+id/description_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_separator2"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/view_separator3"
        android:layout_toRightOf="@id/image_email"
        android:text="TextView"
        android:textSize="18sp"
        android:textColor="#100c08"
        android:layout_toEndOf="@id/image_email" />

    <View
        android:id="@+id/view_separator3"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/description_email"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:background="#444"/>

    <ImageView
        android:id="@+id/image_organisation"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/view_separator3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/contact_organisation" />

    <TextView
        android:id="@+id/description_organisation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_separator3"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/view_separator3"
        android:layout_toRightOf="@id/image_organisation"
        android:text="TextView"
        android:textColor="#100c08"
        android:textSize="18sp"
        android:layout_toEndOf="@id/image_organisation" />

    <View
        android:id="@+id/view_separator4"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/description_organisation"
        android:layout_marginTop="10dp"
        android:background="#444"/>

    <Button
        android:id="@+id/description_editButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_separator4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="10dp"
        android:text="Edit"
        android:textColor="#ffffff"
        android:background="@drawable/edit_button_background"/>

    <Button
        android:id="@+id/description_deleteButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_editButton"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_button_background"
        android:text="Delete"
        android:textColor="#ffffff"/>

</RelativeLayout>